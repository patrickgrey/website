---
cssFiles: []
jsFiles: []
---

{% set env = devEnvironment.environment %}

{% if env === 'dev' %}
    {% set buildURL = "" %}
{% else %}
    {% set buildURL = "../../website-source/_shared/" %}
{% endif %}

<!DOCTYPE html>
<html lang="en"  data-is-dev={% if env === 'dev' %}"true"{% else %}"false"{% endif %}>

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{ title | striptags(false) }}</title>
        <meta name="description" content="{{ description or metadata.description }}">
        <meta name="generator" content="{{ eleventy.generator }}">
        <meta name="theme-color" content="#ffffff">

        <meta property="og:title" content="{{ title | striptags(false) }}">
        <meta property="og:url" content="{{ metadata.url + page.url | url }}">
        <meta property="og:description" content="{{ description or metadata.description }}">
        <meta name="fediverse:creator" content="@patrick@glasgow.social">
        <meta property="og:image" content="{{ metadata.url }}/_shared/images/header/ogImage.jpg">

        

        <link rel="me" href="https://glasgow.social/@patrick">
        
        <link rel="icon" type="image/svg+xml" href="/_shared/favicons/favicon.svg">
        <link rel="icon" type="image/png" href="/_shared/favicons/favicon.png">

        {#- Atom and JSON feeds included by default #}
        <link rel="alternate" href="/feed/feed.xml" type="application/atom+xml" title="{{ metadata.title }}">
        {# <link rel="alternate" href="/feed/feed.json" type="application/json" title="{{ metadata.title }}"> #}

        {% set cssHighlight %}{% include "node_modules/prismjs/themes/prism-okaidia.css" %}{% endset %}
        {#- Render the CSS bundle using Inlined CSS (for the fastest site performance in production) #}
        <style>
            {{cssHighlight | cssmin | safe}}

            .token.constant,
            .token.deleted,
            .token.property,
            .token.symbol,
            .token.tag {
                color: #ff94c9 !important;
            }

            pre {
                counter-reset: lineNumber;
            }

            code[class*=language-], pre[class*=language-] {
                font-size: 0.8em;
                margin-block: 0;
                border-radius:0;
            }

            code .highlight-line::before {
                -webkit-user-select: none;
                border-right: 1px solid #404040;
                color: #858585;
                content: counter(lineNumber);
                counter-increment: lineNumber;
                display: inline-block;
                font-variant-numeric: tabular-nums;
                margin-right: 1.2em;
                padding-right: 1.2em;
                text-align: right;
                width: 2.4em;
            }

            pre[data-language]::before {
                content: attr(data-language);
                color: yellow;
                transform: translateX(0.5rem) translateY(-1rem);
                pointer-events: none;
                text-align: end;
                text-transform: uppercase;
                z-index: 1;
                margin-block-end: -24px;
                padding: 6px;
                font-size: 12px;
                font-style: italic;
                line-height: 1;
                display: block;
                position: sticky;
                inset-inline-start: 0;
            }
        </style>

        {% if env === 'dev' %}
            <link rel="stylesheet" href="/_shared/css/reset.css">
            <link rel="stylesheet" href="/_shared/css/brand.css">
            <link rel="stylesheet" href="/_shared/css/shared.css">
        {% else %}
            {% set css %}
            {% include "../../website-source/_shared/css/reset.css" %}
            {% include "../../website-source/_shared/css/brand.css" %}
            {% include "../../website-source/_shared/css/shared.css" %}
            {% endset %}
            <style>
                {{css | cssmin | safe}}
            </style>
        {% endif %}

        {% for file in cssFiles %}
            <link rel="stylesheet" href="{{file}}">
        {% endfor %}

        <link rel="stylesheet" media="print" href="/_shared/css/print.css">

        {% if jsImports.length > 0 %}
        <script type="importmap">
            {
                "imports": {
                    {% for file in jsImports %}
                    "{{file.name}}": "{{file.path}}"
                    {%- if not loop.last -%}
                    ,
                    {% endif %}
                    {% endfor %}
                }
            }
        </script>
        {% endif %}

        {% if env === 'dev' %}
            <script defer src="/_shared/js/shared.js"></script>
        {% endif %}

        {% for file in jsFilesExternal | reverse %}
            <script defer src="{{file}}"></script>
        {% endfor %}

        {% for file in jsFiles %}
            <script defer type="module" src="{{file}}"></script>
        {% endfor %}

       

    </head>

    <body>

