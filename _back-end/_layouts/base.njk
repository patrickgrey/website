---
cssFiles: ["/_shared/css/more-info.css"]
jsFiles: []
---

{% set env = devEnvironment.environment %}

{% if env === 'dev' %}
    {% set buildURL = "" %}
{% else %}
    {% set buildURL = "../../website-source/_shared/" %}
{% endif %}

<!DOCTYPE html>
<html lang="en"  data-is-dev={% if env === 'dev' %}"true"{% else %}"false"{% endif %}>

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{ title | striptags(false) }}</title>
        <meta name="description" content="{{ description or metadata.description }}">
        <meta name="generator" content="{{ eleventy.generator }}">
        <meta name="theme-color" content="#ffffff">

        <meta property="og:title" content="{{ title | striptags(false) }}">
        <meta property="og:url" content="{{ metadata.url + page.url | url }}">
        <meta property="og:description" content="{{ description or metadata.description }}">
        <meta name="fediverse:creator" content="@patrick@glasgow.social">
        <meta property="og:image" content="{{ metadata.url }}/_shared/images/header/ogImage.jpg">

        

        <link rel="me" href="https://glasgow.social/@patrick">
        
        <link rel="icon" type="image/svg+xml" href="/_shared/favicons/favicon.svg">
<link rel="icon" type="image/png" href="/_shared/favicons/favicon.png">

        {#- Atom and JSON feeds included by default #}
        <link rel="alternate" href="/feed/feed.xml" type="application/atom+xml" title="{{ metadata.title }}">
        {# <link rel="alternate" href="/feed/feed.json" type="application/json" title="{{ metadata.title }}"> #}

        {% set cssHighlight %}{% include "node_modules/prismjs/themes/prism-okaidia.css" %}{% endset %}
        {#- Render the CSS bundle using Inlined CSS (for the fastest site performance in production) #}
        <style>
            {{cssHighlight | cssmin | safe}}

            .token.constant,
            .token.deleted,
            .token.property,
            .token.symbol,
            shared .token.tag {
                color: hotpink !important;
            }

            pre {
                counter-reset: lineNumber;
            }

            code .highlight-line::before {
                -webkit-user-select: none;
                border-right: 1px solid #404040;
                color: #858585;
                content: counter(lineNumber);
                counter-increment: lineNumber;
                display: inline-block;
                font-variant-numeric: tabular-nums;
                margin-right: 1.2em;
                padding-right: 1.2em;
                text-align: right;
                width: 2.4em;
            }

            pre[data-language]::before {
                content: attr(data-language);
                color: yellow;
                transform: translateX(0.5rem) translateY(-1rem);
                pointer-events: none;
                text-align: end;
                text-transform: uppercase;
                z-index: 1;
                margin-block-end: -24px;
                padding: 6px;
                font-size: 12px;
                font-style: italic;
                line-height: 1;
                display: block;
                position: sticky;
                inset-inline-start: 0;
            }
        </style>

        {% if env === 'dev' %}
            <link rel="stylesheet" href="/_shared/css/reset.css">
            <link rel="stylesheet" href="/_shared/css/brand.css">
            <link rel="stylesheet" href="/_shared/css/shared.css">
        {% else %}
            {% set css %}
            {% include "../../website-source/_shared/css/reset.css" %}
            {% include "../../website-source/_shared/css/brand.css" %}
            {% include "../../website-source/_shared/css/shared.css" %}
            {% endset %}
            <style>
                {{css | cssmin | safe}}
            </style>
        {% endif %}

        {% for file in cssFiles %}
            <link rel="stylesheet" href="{{file}}">
        {% endfor %}

        <link rel="stylesheet" media="print" href="/_shared/css/print.css">

        {% if jsImports.length > 0 %}
        <script type="importmap">
            {
                "imports": {
                    {% for file in jsImports %}
                    "{{file.name}}": "{{file.path}}"
                    {%- if not loop.last -%}
                    ,
                    {% endif %}
                    {% endfor %}
                }
            }
        </script>
        {% endif %}

        {% if env === 'dev' %}
            <script defer src="/_shared/js/shared.js"></script>
        {% endif %}

        {% for file in jsFilesExternal | reverse %}
            <script defer src="{{file}}"></script>
        {% endfor %}

        {% for file in jsFiles %}
            <script type="module" src="{{file}}"></script>
        {% endfor %}

       

    </head>

    <body>

        <div class="pg-skip pg-column-main">
            <p>
                <a href="#main">Skip to main content</a> or 
                <a href="#footer">the footer</a>.
            </p>
        </div>
            
        <div class="pg-full-height pg-column-main">

            <header class="pg-flow">

                <img src="/_shared/images/me-01.jpg" alt="Picture of Patrick's face">

                <h1>Patrick Grey</h1>
                <p>Web developer &amp; eLearning specialist</p>

                <section class="pg-contact">
                    <p class="pg-visually-hidden">Contact me!</p>
                    <ul class="pg-socials">
                        <li><a href="https://glasgow.social/@patrick" target="_blank">
                        {% include "../../website-source/_shared/images/icons/icon-mastodon.svg" %}
                        <span class="pg-visually-hidden">https://glasgow.social/@patrick</span></a></li>

                        <li><a href="https://github.com/patrickgrey" target="_blank">
                        {% include "../../website-source/_shared/images/icons/icon-github.svg" %}
                        <span class="pg-visually-hidden">https://github.com/patrickgrey</span></a></li>

                        <li><a href="/feed/feed.xml" >
                        {% include "../../website-source/_shared/images/icons/icon-rss-doc.svg" %}
                        <span class="pg-visually-hidden">
                            RSS</span></a></li>

                        <li>
                            <a href="https://en.wikipedia.org/wiki/Elon_Musk_salute_controversy" target="_blank" >
                            {% include "../../website-source/_shared/images/icons/icon-no-twitter.svg" %}
                            </a></li>
                    </ul>
                </section>


                <nav>
                    <ul>
                        <li><a 
                        {% if(page.url == "/")%} class="pg-is-active" {% endif %} href="/">
                            {% include "../../website-source/_shared/images/icons/icon-home-heart.svg" %}
                            home <span>5</span></a></li>

                        <li><a 
                        {% if(page.url == "/notes/")%} class="pg-is-active" {% endif %} href="/notes">
                            {% include "../../website-source/_shared/images/icons/icon-pencil.svg" %}
                            notes <span>69</span></a></li>

                        <li><a 
                        {% if(page.url == "/projects/")%} class="pg-is-active" {% endif %} href="/projects">
                            {% include "../../website-source/_shared/images/icons/icon-packages.svg" %}
                            projects <span>69</span></a></li>

                        <li><a 
                        {% if(page.url == "/reading/")%} class="pg-is-active" {% endif %} href="/reading">
                            {% include "../../website-source/_shared/images/icons/icon-book-open.svg" %}
                            reading <span>692</span></a></li>




                        {# {% set navPages = collections.all | eleventyNavigation %}
                        {% set navActiveClass = "pg-is-active" %}
                        {%- for navItem in navPages %} #}
                            {# Check that the item url is first in the page url so that e.g. tags/article doesn't make article active #}
                            {# <li><a href="{{ navItem.url }}">{{ navItem.title }}</a></li> #}
                            {# {% if page.url %}
    
                                {% set urlArray = page
                                    .url
                                    .split("/") %}
    
                                {% if (navItem.url == "/") %}
                                    <li {% if navItem.url == page.url %}class="{{navActiveClass}}"{% endif %}>
                                        <a href="{{ navItem.url }}">
                                            {% include "../../website-source/_shared/images/icons/icon-home-filled.svg" %}
                                            {{ navItem.title }} <span>5</span></a>
                                    </li>
