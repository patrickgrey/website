<form>
    <fieldset class="pg-filters">
        <legend>Filters:</legend>
        <naked-filter data-label="Names" data-items-selector="tbody>tr"
            data-item-text-selector=":scope>td:nth-child(1)"></naked-filter>
        <naked-filter data-label="Date of birth" data-items-selector="tbody>tr"
            data-item-text-selector=":scope>td:nth-child(2)" ></naked-filter>
        <naked-filter data-label="Computer" data-items-selector="tbody>tr"
            data-item-text-selector=":scope>td:nth-child(3)>strong" data-filter-type="select"></naked-filter>
    </fieldset>
    
    <button type="reset" data-clear-filters>Clear filters</button>
</form>


{% set rowCount =  250 %}
{% set firstNames =  ["Jane", "John", "Patrick", "Nadine", "David", "Oleks", "Gabby", "Nico", "Jordan"] %}
{% set surnames =  ["Black", "White", "Green", "Brown", "Blue", "Grey"] %}
{% set dobYear =  ["2000", "1990", "1980", "1970", "1960", "1950", "1940", "1930", "1314"] %}
{% set dobMonth =  ["01", "02", "03", "04", "05", "06", "07", "08", "09", "10", "11", "12"] %}
{% set dobDays =  ["17", "20", "28"] %}
{% set favComputer =  ["Acorn", "Amstrad", "Apple", "Atari", "Commodore", "ZX81", "ZX Spectrum", "BBC Micro"] %}

<naked-sticky-overflow>
    <div class="pg-table-overflow">
        <naked-table-stripe-sorter data-class-odd="naked-odd" data-class-even="naked-even">
            <table class="pg-demo-table">
                <thead>
                    <tr>
                        <th><naked-table-sort>Name</naked-table-sort></th>
                        <th><naked-table-sort id="pgDateSorter">Date of birth</naked-table-sort></th>
                        <th><naked-table-sort data-text-find="strong">Favourite computer</naked-table-sort></th>
                    </tr>
                </thead>
                <tbody>
                    {% for row in range(0,rowCount) %}
                    <tr>
                        <td>{{firstNames | random}} {{surnames | random}}</td>
                        <td>{{dobDays | random}}-{{dobMonth | random}}-{{dobYear | random}}</td>
                        <td>It's the: <strong>{{favComputer | random}}</strong></td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </naked-table-stripe-sorter>
    </div>
</naked-sticky-overflow>

