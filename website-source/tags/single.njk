---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - post
    - posts
    - tagList
  addAllPagesToCollections: true
eleventyComputed:
  title: Tagged “{{ tag }}”
permalink: /tags/{{ tag | slugify }}/
---

<article>
  <div class="pg-column-main">
    <h2>Tagged &quot;{{ tag }}&quot;</h2>

    {% set cardList = collections[tag] %}
    {% set cardLimit = 999999 %}
    {% set cardSummary = "notes" %}
    {% include "card-list.njk" %}
    

    <p>See <a href="/tags/">all tags  ↪</a>.</p>

  </div>
</article>